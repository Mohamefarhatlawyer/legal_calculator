<IntroScreen>:
    BoxLayout:
        orientation:'vertical'
        size:root.size
        pos: root.pos
        padding:10
        canvas.before:
            Color:
                rgba: 1, 0, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
        FitImage:
            id: image1
            source: "n1.png"
            size_hint_y: .35
            pos_hint: {"top": 1}
            radius: [36, 36, 0, 0, ]
        Button:
            font_name: 'Arial'
            halign: "right"
            font_size:40
            text: get_display(arabic_reshaper.reshape('دخول'))
            background_color:1, 0, 0, 1
            size_hint:1,.1
            pos:50,50
            on_press: root.manager.current = 'calc'
            Image:
                source:'s.png'
                center_x:self.parent.center_x
                center_y:self.parent.center_y
        Button:
            font_name: 'Arial'
            halign: "right"
            font_size:20
            text: get_display(arabic_reshaper.reshape('للدعم الفنى أضغط هنا'))
            background_color:0, 0, 1, 1
            size_hint:1,.05
            pos:50,50
            on_press:root.openweb()


